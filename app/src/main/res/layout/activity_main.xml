<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lg"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="تطبيق لحذف الباند 10 دقائق
        الأصدار 1.1"
       android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
       android:id="@+id/a"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/a"
        android:layout_centerHorizontal="true"
        android:text="التطبيق مجانى لا أسمح في
         بيعه"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffD300"
        android:textStyle="bold"

        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="200dp"
        android:background="@drawable/rounded_edittext_blue"

        android:layout_height="wrap_content">
        <Button
        android:layout_width="170dp"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
        android:text="للنسخه الفتنامية"
            android:textColor="#990000"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
        android:id="@+id/deletea"
       />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:background="@drawable/rounded_edittext_blue"
             android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="170dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:text="للنسخه الكورية"
            android:textColor="#990000"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/deleteb"
            />
    </RelativeLayout>


</LinearLayout>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/snap"
        android:id="@+id/img"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center"
        android:textStyle="bold"
        android:text="z-9z"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        />
</RelativeLayout>